<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dy_padding_10"
    android:layout_marginTop="@dimen/dy_padding_10"
    android:layout_marginRight="@dimen/dy_padding_10"
    android:background="@drawable/drawable_diary_item_bg"
    android:padding="@dimen/dy_padding_10">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dy_color_6" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="@dimen/dy_padding_10"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/dy_color_black" />
</RelativeLayout>